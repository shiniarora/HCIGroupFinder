<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgimage"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.groupfinder_hci.SignUpActivity$PlaceholderFragment" >

    <TextView
        android:id="@+id/DepartmentLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/LevelOfStudyLabel"
        android:layout_centerVertical="true"
        android:text="Department: "
        android:textColor="#ffffff"
        android:typeface="monospace" />

    <TextView
        android:id="@+id/LevelOfStudyLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/DepartmentLabel"
        android:layout_alignLeft="@+id/PasswordLabel"
        android:layout_marginBottom="26dp"
        android:text="Level Of Study: "
        android:textColor="#ffffff"
        android:typeface="monospace" />

    <TextView
        android:id="@+id/UnityIDLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/PasswordLabel"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="18dp"
        android:layout_marginLeft="24dp"
        android:text="Unity ID: "
        android:textColor="#ffffff"
        android:typeface="monospace" />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/UnityIDLabel"
        android:layout_alignBottom="@+id/UnityIDLabel"
        android:layout_toRightOf="@+id/LevelOfStudyLabel"
        android:ems="10"
        android:typeface="monospace" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/editText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/PasswordLabel"
        android:layout_alignBottom="@+id/PasswordLabel"
        android:layout_toRightOf="@+id/LevelOfStudyLabel"
        android:ems="10"
        android:inputType="textPassword"
        android:typeface="monospace" />

    <TextView
        android:id="@+id/PasswordLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/LevelOfStudyLabel"
        android:layout_alignLeft="@+id/UnityIDLabel"
        android:layout_marginBottom="18dp"
        android:text="Password: "
        android:textColor="#ffffff"
        android:typeface="monospace" />

    <Button
        android:id="@+id/SignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/DepartmentLabel"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp"
        android:text="Continue"
        android:textColor="#ffffff"
        android:typeface="monospace" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText2"
        android:layout_toRightOf="@+id/LevelOfStudyLabel"
        android:entries="@array/levelOfStudy_array" />

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LevelOfStudyLabel"
        android:layout_toRightOf="@+id/LevelOfStudyLabel" />

</RelativeLayout>
